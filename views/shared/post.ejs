<div class="debate-listing">
  <a class="debate-link" href="/posts/<%= post.id %>/show">
    <div class="css-debate-card">
    
      <div class="card-row">
        
        <div class="card-item debate-rating">
          <!-- <header>Rating</header> -->
          <h3 title="Rating"><%= post.totalRating() %></h3>
        </div>
        
        <div class="card-item card-text subject">
          <p><%= post.text %></p>
          <span class="author">
            <%= post.user.name %>
          </span>
        </div>
        
        <div class="card-item card-text debate-data">
          <p>
            <span class="number"><%= post.usersFor.length %>&nbsp;</span>      <span class="word">agree.</span><i class="symbol fa fa-thumbs-up"></i>
          </p><p>
            <span class="number"><%= post.usersAgainst.length %>&nbsp;</span>  <span class="word">disagree.</span><i class="symbol fa fa-thumbs-o-down"></i>
          </p><p>
            <span class="number"><%= post.messages.length %>&nbsp;</span>      <span class="word">messages.</span><i class="symbol fa fa-comments"></i>
          </p>
        </div>
        
        <div class="card-item go-to-link"><i class="fa fa-arrow-right"></i></div>
      
      </div>
      <div class="card-row">
        
        <!-- <div class="card-item tag-padding"> </div> -->
        
        <div class="card-item tags-area">
          <!-- hidden spans -->
          <% post.tags.forEach(function(tag){ %>
            <span>#<%= tag.name %></span>
          <% }) %>
        </div>
      
      </div>
      
    </div>
  </a>
  <!-- Can't nest anchor elements, so tag links have to go here in the HTML and be CSSed into place on the debate card -->
  <div class="debate-tags">
    <% post.tags.forEach(function(tag){ %>
      <a href="/tags/<%= tag.id %>">
        <span>#<%= tag.name %></span>
      </a>
    <% }) %>
  </div>
</div>